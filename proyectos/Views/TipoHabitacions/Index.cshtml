    .habitaciones-table-container {
        margin-top: 30px;
        background-color: rgba(217, 217, 217, 0.6);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .habitaciones-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-family: Inter;
    }

    .habitaciones-table thead th {
        background-color: rgba(180, 180, 180, 0.8);
        color: #555;
        font-size: 18px;
        font-weight: 600;
        padding: 20px 15px;
        text-align: center;
        border-bottom: 2px solid rgba(0, 0, 0, 0.1);
    }

    .nombre-col {
        width: 20%;
    }

    .descripcion-col {
        width: 35%;
    }

    .tipo-cama-col {
        width: 15%;
    }

    .precio-col {
        width: 15%;
    }

    .ajustes-col {
        width: 15%;
    }

    .habitacion-row {
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

    .habitacion-row:hover {
