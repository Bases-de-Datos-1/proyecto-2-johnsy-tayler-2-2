    }

    .habitacion-row:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .nombre-cell, .descripcion-cell, .tipo-cama-cell, .precio-cell, .ajustes-cell {
        padding: 20px 15px;
        text-align: center;
        vertical-align: middle;
        font-size: 16px;
        color: #555;
    }

    .nombre-cell {
        text-align: left;
