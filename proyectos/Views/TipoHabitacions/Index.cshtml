@model IEnumerable<HotelesCaribe.Models.TipoHabitacion>
@{
    ViewData["Title"] = "Administración de tipos de habitación";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Administración de tipos de habitación</h1>
    </div>

    <div class="panel-content">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-bed"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Servicio:</span>
                <span class="service-name">Tipos de habitación</span>
            </div>
        </div>

        <div class="panel-buttons">
            <div class="button-row">
                <a asp-controller="Habitacions" asp-action="Index" asp-route-empresaId="@ViewBag.EmpresaId" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-arrow-left"></i>
                    </div>
                    <span class="button-text">Volver a habitaciones</span>
                </a>
                <a asp-action="Create" asp-route-empresaId="@ViewBag.EmpresaId" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <span class="button-text">Agregar tipo de habitación</span>
                </a>
            </div>
        </div>

        <div class="habitaciones-table-container">
            <table class="habitaciones-table">
                <thead>
                    <tr>
                        <th class="nombre-col">Nombre</th>
                        <th class="descripcion-col">Descripción</th>
                        <th class="tipo-cama-col">Tipo de Cama</th>
                        <th class="precio-col">Precio</th>
                        <th class="ajustes-col">Ajustes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="habitacion-row">
                            <td class="nombre-cell">
                                <strong>@item.Nombre</strong>
                            </td>
                            <td class="descripcion-cell">
                                @item.Descripcion
                            </td>
                            <td class="tipo-cama-cell">
                                @item.TipoCama
                            </td>
                            <td class="precio-cell">
                                <span class="precio-amount">₡@item.Precio.ToString("N0")</span>
                            </td>
                            <td class="ajustes-cell">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.IdTipo" class="action-btn edit-btn" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdTipo" class="action-btn view-btn" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdTipo" class="action-btn delete-btn" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

