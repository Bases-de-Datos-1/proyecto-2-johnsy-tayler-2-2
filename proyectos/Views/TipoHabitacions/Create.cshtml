@model HotelesCaribe.Models.TipoHabitacion
@{
    ViewData["Title"] = "Agregar tipo de habitación";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Agregar tipo de habitación</h1>
    </div>

    <div class="panel-content cuadroVisual2">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-bed"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Gestión:</span>
                <span class="service-name">Nuevo tipo de habitación</span>
            </div>
        </div>

        <form asp-action="Create" asp-route-empresaId="@ViewBag.EmpresaId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="habitacion-form-group">
                <div class="form-icon">
                    <i class="fas fa-tag"></i>
                </div>
                <div class="form-content">
                    <label class="form-label">Nombre del tipo:</label>
                    <div class="form-input-container">
                        <input asp-for="Nombre" class="form-input" placeholder="Ej: Suite Presidencial, Habitación Estándar..." required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="habitacion-form-group">
                <div class="form-icon">
                    <i class="fas fa-align-left"></i>
                </div>
                <div class="form-content">
                    <label class="form-label">Descripción:</label>
                    <div class="form-input-container">
                        <input asp-for="Descripcion" class="form-input" placeholder="Describe las características de este tipo de habitación..." required />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="habitacion-form-group">
                <div class="form-icon">
                    <i class="fas fa-bed"></i>
                </div>
                <div class="form-content">
                    <label class="form-label">Tipo de cama:</label>
                    <div class="form-input-container">
                        <select asp-for="TipoCama" class="form-select" required>
                            <option value="">Seleccione el tipo de cama...</option>
                            <option value="Individual">Individual</option>
                            <option value="Matrimonial">Matrimonial</option>
                            <option value="Queen">Queen</option>
                            <option value="King">King</option>
                            <option value="Doble Individual">Doble Individual</option>
                            <option value="Doble Matrimonial">Doble Matrimonial</option>
                        </select>
                        <span asp-validation-for="TipoCama" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="habitacion-form-group">
                <div class="form-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="form-content">
                    <label class="form-label">Precio por noche:</label>
                    <div class="form-input-container">
                        <input asp-for="Precio" class="form-input" placeholder="Ingrese el precio en colones..." type="number" min="0" step="0.01" required />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-button-container">
                <a asp-action="Index" asp-route-empresaId="@ViewBag.EmpresaId" class="cancel-button">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                <button type="submit" class="add-button">
                    <i class="fas fa-plus"></i>
                    Agregar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

<style>
    .habitacion-form-group {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        background-color: rgba(217, 217, 217, 0.8);
        border-radius: 15px;
        padding: 20px;
    }

    .form-icon {
        margin-right: 20px;
        min-width: 40px;
        display: flex;
        align-items: center;
    }

    .form-icon i {
        font-size: 32px;
        color: #888;
    }

    .form-content {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .form-label {
        font-family: Inter;
        font-size: 20px;
        color: #888;
        font-weight: 500;
        margin: 0;
        white-space: nowrap;
        min-width: 200px;
    }

    .form-input-container {
        flex: 1;
        position: relative;
    }

    .form-input, .form-select {
        border: none;
        border-bottom: 2px solid rgba(136, 136, 136, 0.3);
        background-color: transparent;
        padding: 8px 0;
        font-family: Inter;
        font-size: 18px;
        color: #666;
        outline: none;
        border-radius: 0;
        width: 100%;
    }

    .form-input::placeholder {
        color: #aaa;
        font-style: italic;
    }

    .form-input:focus, .form-select:focus {
        border-bottom-color: #888;
        box-shadow: none;
    }

    .form-select {
        cursor: pointer;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23888' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 10px center;
        background-repeat: no-repeat;
        background-size: 16px 12px;
        padding-right: 40px;
    }

    .form-button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .add-button, .cancel-button {
        border: none;
        border-radius: 20px;
        padding: 15px 40px;
        font-family: Inter;
        font-size: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .add-button {
        background-color: rgba(40, 167, 69, 0.8);
        color: white;
    }

    .add-button:hover {
        background-color: rgba(40, 167, 69, 1);
        transform: translateY(-2px);
        color: white;
    }

    .cancel-button {
        background-color: rgba(108, 117, 125, 0.8);
        color: white;
    }

    .cancel-button:hover {
        background-color: rgba(108, 117, 125, 1);
        transform: translateY(-2px);
        color: white;
    }

    .add-button i, .cancel-button i {
        font-size: 18px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
        font-family: Inter;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}