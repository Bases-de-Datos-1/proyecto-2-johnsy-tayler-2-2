@model HotelesCaribe.Models.TipoHabitacion
@{
    ViewData["Title"] = "Editar tipo de habitación";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Editar tipo de habitación</h1>
    </div>

    <div class="panel-content cuadroVisual2">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Editando:</span>
                <span class="service-name">@Model.Nombre</span>
            </div>
        </div>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTipo" />
            <input type="hidden" asp-for="IdEmpresaHospedaje" />

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre del tipo:</label>
                <input asp-for="Nombre" class="inputRegistroHotel" placeholder="Ej: Suite Presidencial, Habitación Estándar..." required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción:</label>
                <input asp-for="Descripcion" class="inputRegistroHotel" placeholder="Describe las características de este tipo de habitación..." required />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoCama" class="control-label">Tipo de cama:</label>
                <select asp-for="TipoCama" class="inputRegistroHotel" required>
                    <option value="">Seleccione el tipo de cama...</option>
                    <option value="Individual">Individual</option>
                    <option value="Matrimonial">Matrimonial</option>
                    <option value="Queen">Queen</option>
                    <option value="King">King</option>
                    <option value="Doble Individual">Doble Individual</option>
                    <option value="Doble Matrimonial">Doble Matrimonial</option>
                </select>
                <span asp-validation-for="TipoCama" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio por noche:</label>
                <input asp-for="Precio" class="inputRegistroHotel" placeholder="Ingrese el precio en colones..." type="number" min="0" step="0.01" required />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}