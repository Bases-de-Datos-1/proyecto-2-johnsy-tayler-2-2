@model IEnumerable<HotelesCaribe.Models.Reserva>
@{
    ViewData["Title"] = "Administración de reservas";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Administración de reservas</h1>
    </div>

    <div class="panel-content">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Gestión:</span>
                <span class="service-name">Reservas del sistema</span>
            </div>
        </div>

        <div class="panel-buttons">
            <div class="button-row">
                <a asp-action="Create" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <span class="button-text">Crear nueva reserva</span>
                </a>
                <div class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-receipt"></i>
                    </div>
                    <span class="button-text">Facturar</span>
                </div>
            </div>
        </div>

        <div class="habitaciones-table-container">
            <table class="habitaciones-table">
                <thead>
                    <tr>
                        <th class="fecha-col">Fecha Ingreso</th>
                        <th class="cliente-col">Cliente</th>
                        <th class="hotel-col">Hotel</th>
                        <th class="habitacion-col">Habitación</th>
                        <th class="personas-col">Personas</th>
                        <th class="estado-col">Estado</th>
                        <th class="ajustes-col">Ajustes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="habitacion-row">
                            <td class="fecha-cell">
                                <div class="fecha-indicator">
                                    <i class="fas fa-calendar-alt"></i>
                                    <div class="fecha-info">
                                        <span class="fecha-entrada">@item.FechaIngreso.ToString("dd/MM/yyyy")</span>
                                        <small class="fecha-salida">Hasta: @item.FechaSalida.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                            </td>
                            <td class="cliente-cell">
                                <div class="cliente-info">
                                    <i class="fas fa-user"></i>
                                    <span>@item.IdClienteNavigation?.Nombre @item.IdClienteNavigation?.Apellido1</span>
                                </div>
                            </td>
                            <td class="hotel-cell">
                                <span>@item.IdEmpresaHospedajeNavigation?.Nombre</span>
                            </td>
                            <td class="habitacion-cell">
                                <div class="habitacion-indicator">
                                    <i class="fas fa-bed"></i>
                                    <span>Hab. @item.IdHabitacionNavigation?.Numero</span>
                                </div>
                            </td>
                            <td class="personas-cell">
                                <div class="personas-info">
                                    <i class="fas fa-users"></i>
                                    <span>@item.CantidadPersonas</span>
                                    @if (item.TieneVehiculo)
                                    {
                                        <i class="fas fa-car" title="Con vehículo"></i>
                                    }
                                </div>
                            </td>
                            <td class="estado-cell">
                                <span class="estado-badge estado-@item.Estado.ToLower()">
                                    @item.Estado
                                </span>
                            </td>
                            <td class="ajustes-cell">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.IdReserva" class="action-btn edit-btn" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdReserva" class="action-btn view-btn" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdReserva" class="action-btn delete-btn" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

<style>
    .habitaciones-table-container {
        margin-top: 30px;
        background-color: rgba(217, 217, 217, 0.6);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .habitaciones-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
        font-family: Inter;
    }

        .habitaciones-table thead th {
            background-color: rgba(180, 180, 180, 0.8);
            color: #555;
            font-size: 16px;
            font-weight: 600;
            padding: 20px 10px;
            text-align: center;
            border-bottom: 2px solid rgba(0, 0, 0, 0.1);
        }

    .fecha-col {
        width: 15%;
    }

    .cliente-col {
        width: 20%;
    }

    .hotel-col {
        width: 20%;
    }

    .habitacion-col {
        width: 10%;
    }

    .personas-col {
        width: 10%;
    }

    .estado-col {
        width: 10%;
    }

    .ajustes-col {
        width: 15%;
    }

    .habitacion-row {
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .habitacion-row:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }

        .habitacion-row:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.1);
        }

    .fecha-cell, .cliente-cell, .hotel-cell, .habitacion-cell, .personas-cell, .estado-cell, .ajustes-cell {
        padding: 15px 10px;
        vertical-align: middle;
        font-size: 14px;
        color: #555;
    }

    .fecha-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .fecha-indicator i {
            font-size: 16px;
            color: #007bff;
        }

    .fecha-info {
        display: flex;
        flex-direction: column;
    }

    .fecha-entrada {
        font-weight: 600;
        font-size: 14px;
    }

    .fecha-salida {
        font-size: 11px;
        color: #888;
    }

    .cliente-info {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .cliente-info i {
            font-size: 14px;
            color: #28a745;
        }

    .hotel-cell {
        font-weight: 500;
        text-align: left;
    }

    .habitacion-indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
        color: #666;
        font-size: 14px;
        font-weight: 500;
    }

        .habitacion-indicator i {
            font-size: 16px;
            color: #6c757d;
        }

    .personas-info {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

        .personas-info i {
            font-size: 14px;
            color: #17a2b8;
        }

        .personas-info .fa-car {
            color: #ffc107;
            margin-left: 5px;
        }

    .estado-badge {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .estado-activa {
        background-color: rgba(40, 167, 69, 0.2);
        color: #155724;
    }

    .estado-finalizada {
        background-color: rgba(108, 117, 125, 0.2);
        color: #495057;
    }

    .estado-cancelada {
        background-color: rgba(220, 53, 69, 0.2);
        color: #721c24;
    }

    .estado-pendiente {
        background-color: rgba(255, 193, 7, 0.2);
        color: #856404;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 14px;
    }

    .edit-btn {
        background-color: rgba(255, 193, 7, 0.8);
        color: #856404;
    }

        .edit-btn:hover {
            background-color: rgba(255, 193, 7, 1);
            color: #856404;
            transform: translateY(-2px);
        }

    .view-btn {
        background-color: rgba(0, 123, 255, 0.8);
        color: #004085;
    }

        .view-btn:hover {
            background-color: rgba(0, 123, 255, 1);
            color: #004085;
            transform: translateY(-2px);
        }

    .delete-btn {
        background-color: rgba(220, 53, 69, 0.8);
        color: #721c24;
    }

        .delete-btn:hover {
            background-color: rgba(220, 53, 69, 1);
            color: #721c24;
            transform: translateY(-2px);
        }
</style>