@model HotelesCaribe.Models.EmpresaRecreacion

@{
    ViewData["Title"] = "Create";
}

<div class="container containerLogoInicioSolo">
    <p class="container inter24" id="textoBienvenidaCliente">
        Registro de servicio de recreación
    </p>
</div>

<div class="cuadroVisual">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CedulaJuridica" class="control-label">Cédula jurídica:</label>
                    <input asp-for="CedulaJuridica" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="CedulaJuridica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Provincia" class="control-label">Provincia:</label>
                    <input asp-for="Provincia" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Provincia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Canton" class="control-label">Cantón:</label>
                    <input asp-for="Canton" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Canton" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Distrito" class="control-label">Distrito:</label>
                    <input asp-for="Distrito" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Distrito" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senas" class="control-label">Señas:</label>
                    <input asp-for="Senas" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Senas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Latitud" class="control-label">Latitud:</label>
                    <input asp-for="Latitud" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Latitud" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitud" class="control-label">Longitud:</label>
                    <input asp-for="Longitud" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Longitud" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label">Correo electrónico:</label>
                    <input asp-for="Correo" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Teléfono:</label>
                    <input asp-for="Telefono" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Encargado" class="control-label">Encargado:</label>
                    <input asp-for="Encargado" class="form-control inputRegistroRecreativa" />
                    <span asp-validation-for="Encargado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Siguiente" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
