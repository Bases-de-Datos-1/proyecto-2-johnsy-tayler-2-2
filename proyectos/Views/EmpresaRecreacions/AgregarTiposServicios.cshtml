@model HotelesCaribe.Models.ModeloRecreativaActividades

@{
    ViewData["Title"] = "Tipos de Servicios";
}


<div class="container containerLogoInicioSolo">
    <p class="container inter24" id="textoBienvenidaCliente">
        ¿Qué tipo de servicios deseas ofrecer?
    </p>
</div>


<div class="panel-container">
    <div class="panel-content">
        <form asp-action="AgregarTiposServicios" asp-route-id="@Model.IdEmpresa" method="post">
            <input type="hidden" asp-for="IdEmpresa" />

            <div class="servicios-grid">
                <!-- Fila 1 -->
                <div class="servicios-row">
                    <div class="servicio-item" data-servicio="piscina">
                        <div class="servicio-icon">
                            <i class="fas fa-swimmer"></i>
                        </div>
                        <span class="servicio-text">Piscina</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Piscina" class="servicio-checkbox" />
                    </div>

                    <div class="servicio-item" data-servicio="wifi">
                        <div class="servicio-icon">
                            <i class="fas fa-wifi"></i>
                        </div>
                        <span class="servicio-text">Wifi gratis</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Wifi gratis" class="servicio-checkbox" />
                    </div>
                </div>

                <!-- Fila 2 -->
                <div class="servicios-row">
                    <div class="servicio-item" data-servicio="parqueo">
                        <div class="servicio-icon">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                        <span class="servicio-text">Parqueo</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Parqueo" class="servicio-checkbox" />
                    </div>

                    <div class="servicio-item" data-servicio="restaurante">
                        <div class="servicio-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <span class="servicio-text">Restaurante</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Restaurante" class="servicio-checkbox" />
                    </div>
                </div>

                <!-- Fila 3 -->
                <div class="servicios-row">
                    <div class="servicio-item" data-servicio="bar">
                        <div class="servicio-icon">
                            <i class="fas fa-cocktail"></i>
                        </div>
                        <span class="servicio-text">Bar</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Bar" class="servicio-checkbox" />
                    </div>

                    <div class="servicio-item" data-servicio="casino">
                        <div class="servicio-icon">
                            <i class="fas fa-dice"></i>
                        </div>
                        <span class="servicio-text">Casino</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Casino" class="servicio-checkbox" />
                    </div>
                </div>

                <!-- Fila 4 -->
                <div class="servicios-row">
                    <div class="servicio-item" data-servicio="ranchos">
                        <div class="servicio-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span class="servicio-text">Ranchos</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Ranchos" class="servicio-checkbox" />
                    </div>

                    <div class="servicio-item" data-servicio="zona-infantil">
                        <div class="servicio-icon">
                            <i class="fas fa-child"></i>
                        </div>
                        <span class="servicio-text">Zona infantil</span>
                        <input type="checkbox" name="ServiciosSeleccionados" value="Zona infantil" class="servicio-checkbox" />
                    </div>
                </div>
            </div>

            <div class="siguiente-container">
                <button type="submit" class="btn-siguiente-servicios">
                    <i class="fas fa-arrow-right"></i>
                    Siguiente
                </button>
            </div>
        </form>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">Hoteles Caribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio.
    </p>
    <div class="separacion200"></div>
</div>

<style>
    .servicios-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin: 40px 0;
    }

    .servicios-row {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .servicio-item {
        position: relative;
        display: flex;
        align-items: center;
        gap: 15px;
        background-color: rgba(220, 220, 220, 0.6);
        border-radius: 20px;
        padding: 20px 30px;
        min-width: 280px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 3px solid transparent;
    }

    .servicio-item.seleccionado {
        border: 3px solid #333;
        background-color: rgba(200, 200, 200, 0.8);
    }

    .servicio-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
    }

    .servicio-icon i {
        font-size: 24px;
        color: #666;
    }

    .servicio-text {
        font-family: Inter;
        font-size: 20px;
        color: #666;
        font-weight: 500;
        flex: 1;
    }

    .servicio-checkbox {
        display: none;
    }

    .siguiente-container {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    .btn-siguiente-servicios {
        background-color: rgba(220, 220, 220, 0.8);
        border: none;
        border-radius: 20px;
        padding: 15px 40px;
        font-family: Inter;
        font-size: 18px;
        color: #666;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-siguiente-servicios:hover {
        background-color: rgba(200, 200, 200, 0.9);
        transform: translateY(-2px);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Manejar clicks en los servicios
        document.querySelectorAll('.servicio-item').forEach(item => {
            item.addEventListener('click', function() {
                const checkbox = this.querySelector('.servicio-checkbox');
                const isChecked = checkbox.checked;

                // Toggle checkbox
                checkbox.checked = !isChecked;

                // Toggle visual state
                if (checkbox.checked) {
                    this.classList.add('seleccionado');
                } else {
                    this.classList.remove('seleccionado');
                }
            });
        });

        // Validar al enviar (opcional)
        document.querySelector('form').addEventListener('submit', function(e) {
            const serviciosSeleccionados = document.querySelectorAll('input[name="ServiciosSeleccionados"]:checked');

            if (serviciosSeleccionados.length === 0) {
                e.preventDefault();
                alert('Por favor selecciona al menos un tipo de servicio.');
                return false;
            }
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}