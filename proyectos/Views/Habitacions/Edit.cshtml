@model HotelesCaribe.Models.Habitacion
@{
    ViewData["Title"] = "Editar habitación";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Editar habitación</h1>
    </div>

    <div class="panel-content cuadroVisual2">
        <!-- Información del servicio -->
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Editar:</span>
                <span class="service-name">Habitación #@Model.Numero</span>
            </div>
        </div>

        <!-- Formulario de edición -->
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHabitacion" />
            <input type="hidden" asp-for="IdEmpresaHospedaje" />

            <div class="form-group">
                <label asp-for="Numero" class="control-label">Número de habitación:</label>
                <input asp-for="Numero" class="inputRegistroHotel" placeholder="Escriba el número de habitación..." type="number" min="1" required />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdTipoHabitacion" class="control-label">Tipo de habitación:</label>
                <select asp-for="IdTipoHabitacion" class="inputRegistroHotel" asp-items="ViewBag.IdTipoHabitacion" required>
                    <option value="">Seleccione el tipo de habitación...</option>
                </select>
                <span asp-validation-for="IdTipoHabitacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" asp-route-empresaId="@ViewBag.EmpresaId" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Guardar cambios
                </button>
            </div>
        </form>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}