@model IEnumerable<HotelesCaribe.Models.Habitacion>
@{
    ViewData["Title"] = "Administración de habitaciones";
}
@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/indexHabitacion.css" asp-append-version="true" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Administración de habitaciones</h1>
    </div>

    <div class="panel-content">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Servicio:</span>
                <span class="service-name">@ViewBag.EmpresaSeleccionada</span>
            </div>
        </div>

        <div class="panel-buttons">
            <div class="button-row">
                <a asp-controller="Habitacions" asp-action="Create" asp-route-empresaId="@ViewBag.EmpresaId" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <span class="button-text">Agregar habitación</span>
                </a>
                <a asp-controller="TipoHabitacions" asp-action="Create" asp-route-empresaId="@ViewBag.EmpresaId" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <span class="button-text">Agregar tipo de habitación</span>
                </a>
            </div>
        </div>

        <div class="habitaciones-table-container">
            <table class="habitaciones-table">
                <thead>
                    <tr>
                        <th class="numero-col">Número</th>
                        <th class="descripcion-col">Descripción</th>
                        <th class="ajustes-col">Ajustes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="habitacion-row">
                            <td class="numero-cell">
                                <div class="numero-indicator">
                                    <i class="fas fa-door-open"></i>
                                    <span>@item.Numero</span>
                                </div>
                            </td>
                            <td class="descripcion-cell">
                                <span>@item.IdTipoHabitacionNavigation?.Nombre</span>
                            </td>
                            <td class="ajustes-cell">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.IdHabitacion" class="action-btn edit-btn" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdHabitacion" class="action-btn view-btn" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdHabitacion" class="action-btn delete-btn" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
    <div class="separacion200"></div>
</div>
