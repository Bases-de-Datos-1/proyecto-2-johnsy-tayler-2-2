@model HotelesCaribe.Models.ModeloEmpresaServicios

@{
    ViewData["Title"] = "Servicios del Hospedaje";
    Layout = "_Layout";
}

<div class="container containerLogoInicioSolo">
    <p class="container inter24" id="textoBienvenidaCliente">
        ¿Qué tipo de servicios deseas ofrecer?
    </p>
</div>

<div class="container-fluid p-0">
    <div class="container mt-5">
        <div class="cuadroVisual cuadroServicios">
            <form asp-action="Servicios" asp-route-id="@Model.IdEmpresa" method="post">
                <input type="hidden" asp-for="IdEmpresa" />

                <div class="servicios-grid">
                    <div class="service-card" data-service="piscina">
                        <div class="service-content">
                            <div class="service-icon">
                                <i class="fas fa-swimming-pool"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Piscina</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TienePiscina" id="piscina">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="wifi">
                        <div class="service-content">
                            <div class="service-icon wifi-icon">
                                <i class="fas fa-wifi"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Wifi gratis</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneWifi" id="wifi">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="parqueo">
                        <div class="service-content">
                            <div class="service-icon parqueo-icon">
                                <i class="fas fa-car"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Parqueo</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneParqueo" id="parqueo">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="restaurante">
                        <div class="service-content">
                            <div class="service-icon restaurante-icon">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Restaurante</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneRestaurante" id="restaurante">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="bar">
                        <div class="service-content">
                            <div class="service-icon bar-icon">
                                <i class="fas fa-cocktail"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Bar</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneBar" id="bar">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="casino">
                        <div class="service-content">
                            <div class="service-icon casino-icon">
                                <i class="fas fa-dice"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Casino</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneCasino" id="casino">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="ranchos">
                        <div class="service-content">
                            <div class="service-icon ranchos-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Ranchos</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneRanchos" id="ranchos">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="service-card" data-service="zona-infantil">
                        <div class="service-content">
                            <div class="service-icon zona-infantil-icon">
                                <i class="fas fa-child"></i>
                            </div>
                            <div class="service-info">
                                <span class="service-name">Zona infantil</span>
                                <div class="form-check">
                                    <input class="form-check-input service-checkbox" type="checkbox"
                                           asp-for="TieneZonaInfantil" id="zona-infantil">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn text-primary btn-siguiente">
                        Siguiente <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="container text-center mt-5">
        <p class="sloganRancho">Hoteles Caribe</p>
        <p class="textosBienvenida">La mejor plataforma para tu negocio.</p>
    </div>
</div>

@section Styles {
    <style>
        .cuadroServicios {
            max-width: 800px;
            padding: 40px;
        }

        .servicios-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .service-card {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid transparent;
            border-radius: 15px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .service-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
                border-color: #2688e4;
            }

            .service-card.selected {
                background: linear-gradient(135deg, #2688e4, #1e7abc);
                color: white;
                border-color: #1e7abc;
                transform: scale(1.02);
            }

        .service-content {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .service-icon {
            font-size: 28px;
            color: #2688e4;
            transition: color 0.3s ease;
            width: 40px;
            text-align: center;
        }

        .service-card.selected .service-icon {
            color: white;
        }

        .service-info {
            flex: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .service-name {
            font-family: Inter;
            font-size: 20px;
            font-weight: 500;
            color: #767676;
        }

        .service-card.selected .service-name {
            color: white;
        }

        .form-check {
            margin: 0;
        }

        .service-checkbox {
            width: 20px;
            height: 20px;
            border: 2px solid #2688e4;
            border-radius: 4px;
        }

        .service-card.selected .service-checkbox {
            background-color: white;
            border-color: white;
        }

            .service-card.selected .service-checkbox:checked {
                background-color: #2688e4;
                border-color: white;
            }

        /* Iconos específicos con colores */
        .wifi-icon {
            color: #4CAF50;
        }

        .service-card.selected .wifi-icon {
            color: white;
        }

        .parqueo-icon {
            color: #FF9800;
        }

        .service-card.selected .parqueo-icon {
            color: white;
        }

        .restaurante-icon {
            color: #E91E63;
        }

        .service-card.selected .restaurante-icon {
            color: white;
        }

        .bar-icon {
            color: #9C27B0;
        }

        .service-card.selected .bar-icon {
            color: white;
        }

        .casino-icon {
            color: #F44336;
        }

        .service-card.selected .casino-icon {
            color: white;
        }

        .ranchos-icon {
            color: #795548;
        }

        .service-card.selected .ranchos-icon {
            color: white;
        }

        .zona-infantil-icon {
            color: #FF5722;
        }

        .service-card.selected .zona-infantil-icon {
            color: white;
        }

        .btn-siguiente {
            font-size: 20px;
            font-family: Inter;
            font-weight: 500;
            padding: 10px 30px;
            border: 2px solid #2688e4;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .btn-siguiente:hover {
                background-color: #2688e4;
                color: white !important;
                transform: translateY(-2px);
            }

    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Manejar clics en las tarjetas de servicio
            $('.service-card').click(function() {
                const checkbox = $(this).find('.service-checkbox');
                const isChecked = checkbox.prop('checked');

                // Toggle checkbox
                checkbox.prop('checked', !isChecked);

                // Toggle visual state
                $(this).toggleClass('selected', !isChecked);

                // Trigger change event for validation
                checkbox.trigger('change');
            });

            // Prevenir que el clic en el checkbox propague al contenedor
            $('.service-checkbox').click(function(e) {
                e.stopPropagation();
                const card = $(this).closest('.service-card');
                card.toggleClass('selected', $(this).prop('checked'));
            });

            // Inicializar estado visual basado en checkboxes marcados
            $('.service-checkbox:checked').each(function() {
                $(this).closest('.service-card').addClass('selected');
            });
        });
    </script>
}