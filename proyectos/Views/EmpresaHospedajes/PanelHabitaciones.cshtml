@model HotelesCaribe.Models.VwInfoCompletaHospedaje

@{
    ViewData["Title"] = "Panel de Habitaciones";
}

@section Styles {
    <link rel="stylesheet" href="~/css/panelControl.css" />
}

<div class="panel-container">
    <div class="panel-header">
        <h1 class="panel-title">Administración de habitaciones</h1>
    </div>

    <div class="panel-content">
        <div class="service-info">
            <div class="service-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="service-text">
                <span class="service-label">Servicio: </span>
                <span class="service-name">@Model.NombreHotel</span>
            </div>
        </div>

        <div class="panel-buttons">
            <div class="button-row">
                <a asp-controller="Habitacions" asp-action="Create" asp-route-empresaId="@Model.IdEmpresaHospedaje" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <span class="button-text">Agregar habitación</span>
                </a>
                <a asp-controller="TipoHabitacions" asp-action="Create" asp-route-empresaId="@Model.IdEmpresaHospedaje" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <span class="button-text">Agregar tipo de habitación</span>
                </a>
            </div>
            <div class="button-row">
                <a asp-controller="Habitacions" asp-action="Index" asp-route-empresaId="@Model.IdEmpresaHospedaje" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <span class="button-text">Ver habitaciones</span>
                </a>
                <a asp-controller="TipoHabitacions" asp-action="Index" asp-route-empresaId="@Model.IdEmpresaHospedaje" class="panel-button">
                    <div class="button-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <span class="button-text">Ver tipos de habitaciones</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container slogan">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio.
    </p>
    <div class="separacion200"></div>
</div>