@{
    ViewData["Title"] = "Home Page";
}

<div>
    <p class="container inter24 textosBienvenida" id="textoBienvenida1">
        La mejor aplicación para planificar tus viajes y disfrutar al máximo.
    </p>
</div>

<nav class="container">
    <form class="busqueda form-inline position-relative" asp-controller="Busqueda" asp-action="Index" method="get">
        <div class="position-relative w-100">
            <div class="search-container">
                <select name="tipoBusqueda" class="tipo-busqueda-select">
                    <option value="hospedaje" selected="@(ViewBag.TipoBusqueda == "hospedaje")">Hospedaje</option>
                    <option value="actividades" selected="@(ViewBag.TipoBusqueda == "actividades")">Actividades</option>
                </select>
    
                @if (ViewBag.TipoBusqueda == "actividades")
                {
                    <input name="nombreActividad" placeholder="Buscar actividades..." class="inputRedondo form-control mr-sm-2 inter24 pr-5" type="search">
                }
                else
                {
                    <input name="nombreHotel" placeholder="Buscar hospedaje..." class="inputRedondo form-control mr-sm-2 inter24 pr-5" type="search">
                }
                <button type="submit" class="botonTransparente">
                    <i class="fas fa-search icono-busqueda"></i>
                </button>
            </div>
        </div>
    </form>
</nav>
<div class="container">
    <p class="container inter24 textosBienvenida" id="textoBienvenida2">
        Con Hoteles Caribe, puedes encontrar la mejor manera de disfrutar tus días libres.
    </p>
</div>

<div class="container sloganPrincipal">
    <p class="sloganRancho navbar-brand">HotelesCaribe</p>
    <p class="container inter24 textosBienvenida" id="textoSlogan">
        La mejor plataforma para tu negocio y tus viajes.
    </p>
</div>