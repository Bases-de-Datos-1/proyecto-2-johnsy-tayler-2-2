@{
    ViewData["Title"] = "Reservación realizada";
}

@section Styles {
    <link rel="stylesheet" href="~/css/infoComprobanteReserva.css" asp-append-version="true" />
}

<div class="confirmation-container">
    <h1 class="confirmation-title">Reservación realizada</h1>

    <div class="confirmation-card">
        <div class="service-header">
            <i class="fas fa-hotel service-icon"></i>
            <div class="service-info">
                <h3>Servicio:</h3>
                <p class="service-name">@ViewBag.NombreHotel</p>
            </div>
        </div>

        <div class="reservation-number">
            <p class="reservation-number-value">@ViewBag.NumeroReserva</p>
            <p class="reservation-number-label">Número de reserva</p>
        </div>

        <div class="detail-row">
            <i class="fas fa-id-card detail-icon"></i>
            <span class="detail-label">Identificación:</span>
            <span class="detail-value">@ViewBag.IdentificacionCliente</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-calendar-alt detail-icon"></i>
            <span class="detail-label">Fecha entrada:</span>
            <span class="detail-value">@ViewBag.FechaEntrada</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-clock detail-icon"></i>
            <span class="detail-label">Hora entrada:</span>
            <span class="detail-value">@ViewBag.HoraEntrada</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-calendar-alt detail-icon"></i>
            <span class="detail-label">Fecha salida:</span>
            <span class="detail-value">@ViewBag.FechaSalida</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-clock detail-icon"></i>
            <span class="detail-label">Hora salida:</span>
            <span class="detail-value">@ViewBag.HoraSalida</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-door-open detail-icon"></i>
            <span class="detail-label">Habitaciones:</span>
            <span class="detail-value">@ViewBag.NumeroHabitaciones</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-users detail-icon"></i>
            <span class="detail-label">Personas:</span>
            <span class="detail-value">@ViewBag.NumeroPersonas</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-car detail-icon"></i>
            <span class="detail-label">Tiene vehículo:</span>
            <span class="detail-value">@ViewBag.TieneVehiculo</span>
        </div>

        <div class="detail-row">
            <i class="fas fa-bed detail-icon"></i>
            <span class="detail-label">Habitación:</span>
            <span class="detail-value">@ViewBag.DescripcionHabitacion</span>
        </div>

        <div class="total-section">
            <p class="total-amount">@ViewBag.TotalPagar</p>
            <p class="total-label">Total a pagar</p>
        </div>

        <p class="reminder-text">
            Asegúrate de conocer y tener siempre accesible<br>
            tu número de reserva.
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn-volver">
            <i class="fas fa-home"></i>
            Volver al inicio
        </a>
    </div>

    <div class="brand-footer">
        <h2 class="brand-name">Hoteles Caribe</h2>
        <p class="brand-slogan">La mejor plataforma para tu negocio.</p>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.confirmation-card');
            const title = document.querySelector('.confirmation-title');

            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            title.style.opacity = '0';
            title.style.transform = 'translateY(-20px)';

            setTimeout(() => {
                title.style.transition = 'all 0.6s ease';
                title.style.opacity = '1';
                title.style.transform = 'translateY(0)';
            }, 200);

            setTimeout(() => {
                card.style.transition = 'all 0.8s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 400);

            const detailRows = document.querySelectorAll('.detail-row');
            detailRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(5px)';
                    this.style.transition = 'transform 0.2s ease';
                });

                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
    </script>
}